{
	"name": "custom-button",
	"displayName": "custom-button",
	"publisher": "OhYee",
	"description": "\"Add a button in VSCode that can execute commands\"",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "buttonTreeNodeProvider",
					"name": "%extension.treeview.title%",
					"icon": "./button.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "custom-button.refresh",
					"when": "view == buttonTreeNodeProvider",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "custom-button.call",
					"when": "view == buttonTreeNodeProvider && viewItem == buttonItem",
					"group": "inline"
				}
			]
		},
		"commands": [
			{
				"command": "custom-button.helloWorld",
				"title": "%extension.command.helloworld%"
			},
			{
				"command": "custom-button.call",
				"title": "%extension.command.call%",
				"icon": "$(play)"
			},
			{
				"command": "custom-button.refresh",
				"title": "%extension.command.refresh%",
				"icon": "$(refresh)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "custom-button-view",
					"title": "Custom Buttons",
					"icon": "button.svg"
				}
			]
		},
		"configuration": {
			"title": "buttons",
			"properties": {
				"custom-button.direct": {
					"type": "boolean",
					"description": "Directly execute the command on sidebar",
					"default": false
				},
				"custom-button.buttons": {
					"type": "array",
					"default": [],
					"items": {
						"type": "object",
						"items": {
							"name": {
								"type": "string"
							},
							"command": {
								"type": "string"
							},
							"position": {
								"type": "string",
								"enum": [
									"statusbar-left",
									"statusbar-right"
								],
								"default": "statusbar-left"
							},
							"priority": {
								"type": "number",
								"default": 0
							},
							"icon": {
								"type": "string"
							}
						}
					},
					"description": "Button list"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"build": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0",
		"vsce": "^1.99.0"
	},
	"dependencies": {}
}
